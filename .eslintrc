{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
        "quotes": [
            "error",
            "single"
        ],
        "indent": [
            "error",
            4
        ]
    },
    "ignorePatterns": [
        "dist",
        "node_modules",
        "**/*.spec.ts",
        "**/*.e2e.ts"
    ]
}